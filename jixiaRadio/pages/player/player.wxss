/* 播放列表页 */

/* pages/playlist/playlist.wxss */

.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.playlist {
  margin-top: 5.2vh;
}

/* 主题 */

.playlist-theme {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.playlist-theme-item {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin: 0 11rpx;
}

.playlist-theme-bg1 {
  width: 218rpx;
  height: 98rpx;
  background: url(https://lg-5xeprn1o-1256180316.cos.ap-shanghai.myqcloud.com/theme-0.png) 0 0 no-repeat;
  background-size: contain;
}

.playlist-theme-bg2 {
  width: 218rpx;
  height: 98rpx;
  background: url(https://lg-5xeprn1o-1256180316.cos.ap-shanghai.myqcloud.com/theme-1.png) 0 0 no-repeat;
  background-size: contain;
}

.playlist-theme-bg3 {
  width: 218rpx;
  height: 98rpx;
  background: url(https://lg-5xeprn1o-1256180316.cos.ap-shanghai.myqcloud.com/theme-2.png) 0 0 no-repeat;
  background-size: contain;
}

.theme-icon {
  color: #fff;
  padding-left: 15rpx;
}

.theme-title {
  width: 85rpx;
  font-size: 28rpx;
  color: #fff;
  line-height: 28rpx;
  padding-left: 22rpx;
  text-align: center;
}

/* list内容 */

.playlist-list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 4.1vh;
}

.playlist-header {
  display: flex;
  flex-direction: row;
  justify-content: start;
  padding-bottom: 7rpx;
  width: 680rpx;
  border-bottom: 1rpx solid rgba(85, 85, 85, 0.3);
  margin-bottom: 1.1vh;
}

.playlist-header .icon {
  font-size: 42rpx;
  text-align: center;
}

.playlist-header .title {
  align-self: center;
  font-size: 32rpx;
  line-height: 32rpx;
  margin-left: 13rpx;
}

/* 列表内容 */

.playlist-content {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 8rpx;
  width: 680rpx;
  height: 40rpx;
}

.playlist-content .title {
  font-size: 28rpx;
  line-height: 28rpx;
  width: 560rpx;
}

.icon-group{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.playlist-content .icon-small {
  font-size: 28rpx;
  text-align: center;
  line-height: 28rpx;
  align-self: center;
}

.playlist-content .subtitle {
  color: #555555;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 10rpx;
}

/* 播放器页 */

.player{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
/* player-img:播放封面 */
.player-img{
  display: flex;
  flex-direction: column;
  justify-content: center; 
  align-self: center;
  padding-top: 5.2vh;
}

.player-img>image{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  box-shadow: 0 0 40px 0 rgba(255, 113, 99, 0.2);
}

.img-animation{
  animation: img-rotate 120s linear 0s infinite normal; 
}

@keyframes img-rotate{
  from {transform: rotate(0deg)}
  to{transform: rotate(360deg)}
}

.player-img-playNumber{
  display: flex;
  position: relative;
  left: 0rpx;
  bottom: 80rpx;
  flex-direction: row;
  justify-content: center; 
  align-items: center;
  height: 30rpx;
}

.player-img-playNumber image{
  width: 29rpx;
  height: 25rpx;
}

.player-img-playNumber .text{
  padding-top: 1rpx;
  font-family: "";
  margin-left: 6rpx;
  font-size: 28rpx;
  color: white;
  line-height: 28rpx;
}

/* 播放器分享组件 */
.player-component{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 2.8vh;
  height:50rpx;
}

.player-component>.radio{
  line-height: 48rpx;
}

.icon-collection-red:before { content: "\e871";color: #d95555;}

.scale{
 animation: scale 1s ease-out 0s 1;
}

@keyframes scale {
  0%{ font-size:48rpx;}
  50%{ font-size:56rpx;}
  100%{ font-size:48rpx;}
}

.player-component-item{
  width: 130rpx;
  text-align: center;
}

.player-component-collection{
  display: flex;
  flex-direction: row;
  justify-content: center;
  
}

.player-component-article{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.article-redpoint{
  background: #d95555;
  position: absolute;
  left:340rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 100%;
}

.player-component-comment{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.player-component-comment-number{
  position: absolute;
  font-size:14rpx;
  left:462rpx;
}

/* 播放器内容 */
.player-content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 3.9vh;
}

.player-content-item{
  padding: 20rpx 0;
}

.player-content-title {
  font-size: 30rpx;
  text-align: center;
  line-height: 30rpx;
  padding: 10rpx 0;
  height: 60rpx;
}

.player-content-subtitle {
  font-size: 24rpx;
  text-align: center;
}

/* slider */
.player-slider{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.player-slider-currentTime{
  font-size:24rpx;
  line-height: 24rpx;
}

.slider{
  width: 70%;
}

.player-slider-allTime{
  font-size:24rpx;
  line-height: 24rpx;
}

/* 播放控件 */
.player-control{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding-top: 1.5vh;
}

.player-control-item{
  width: 180rpx;
  text-align: center;
}

.previous{
  font-size: 56rpx;
}

.next{
  font-size: 56rpx;
}

.play{
  font-size: 112rpx;
}

/* 个人中心页 */
/* pages/person/person.wxss */

.person {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.person-img {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 5.2vh;
}

.person-img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}

.person-img .nickname {
  font-size: 28rpx;
  margin-top: 1.1vh;
}

/* 我的欣赏 */

.person-collection {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 2.3vh;
}

.person-collection>.text {
  font-size: 32rpx;
  padding-bottom: 0.6vh;
  width: 550rpx;
  border-bottom: 1rpx solid #c5c5c5;
  padding-left: 10rpx;
}

.collectionList {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: start;
  align-items: center;
  width: 550rpx;
  height: 50rpx;
  padding: 0 0.6vh;
}

.collectionList>.icon {
  font-size: 48rpx;
  line-height: 48rpx;
  text-align: center;
}


.collectionList .text{
  font-size: 28rpx;
  line-height: 48rpx;
  align-self: center;
  margin-left: 20rpx;
}

.person-collection>.icon{
  margin-top: 20rpx;
  font-size: 32rpx;
}


.person-comment{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.person-comment .text{
  font-size: 32rpx;
  padding-bottom: 0.6vh;
  width: 550rpx;
  border-bottom: 1rpx solid #c5c5c5;
  padding-left: 10rpx;
}

.person-comment .subtitle{
  font-size: 24rpx;
  color: #ccc;
  margin-top: 20rpx;
}
